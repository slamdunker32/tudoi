<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        投稿画面
      </div>
      <div class="card-body">
        <%= form_with model: @post, class: "upload-images p-0 border-0" do |f| %>
          <div class="form-group mt-2 mb-4">
            <%= f.select :subject_id, [ ['英語', 1], ['数学IAⅡB', 2], ['数学Ⅲ', 3], ['現代文', 4], ['古文・漢文', 5], ['日本史', 6], ['世界史', 7], ['地理', 8], ['公民', 9], ['物理', 10], ['化学', 11], ['生物', 12], ['その他', 13]], {include_blank: "教科名を選択してください"}, {class: "form-control"} %>
          </div>
          <div class="form-group row mt-2 mb-4">
            <div class="col-auto pr-0">
              <%= image_tag avatar_url(current_user), class: "post-profile-icon" %>
            </div>
            <div class="col pl-0">
              <%= f.text_field :caption, class: "form-control border-0", placeholder: "題名を書く" %>
            </div>
          </div>
          <div class="mb-3">
            <%= f.file_field :images, multiple: true, class: "form-control" %>
            <div class="col pl-0">
              <%= f.text_area :description, class: "form-control border-0", placeholder: "画像説明" %>
            </div>
          </div>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
